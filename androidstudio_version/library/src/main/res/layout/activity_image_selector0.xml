<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top"
		android:background="#0072c6"
		android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/back_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:src="@drawable/btn_back_selector" />

        <TextView
            android:id="@+id/head_bar_title_view"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:gravity="center"
            android:singleLine="true"
            android:text="最近图片"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/album_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableRight="@drawable/arrow_down"
            android:padding="10dip"
            android:text="相册"
            android:textColor="@android:color/white"
            android:textSize="18dip" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/result_llyt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:text="尝试加载图片" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相机拍照或本地保存的图片" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="都可以在这里查看" />
        </LinearLayout>

        <GridView
            android:id="@+id/grid_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:horizontalSpacing="4dp"
            android:numColumns="3"
            android:verticalSpacing="4dp" />
        
        <FrameLayout
            android:id="@+id/layout_arrow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="invisible" >

            <ListView
                android:id="@+id/ablum_arrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:listSelector="@android:color/transparent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scrollbarStyle="outsideOverlay" >
            </ListView>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/pic_browser_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/pic_browser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/picker_browser"
            android:enabled="false"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="预览"
            android:textColor="#cccccc" />

        <TextView
            android:id="@+id/pic_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:drawablePadding="4dip"
            android:drawableRight="@drawable/arrow_up"
            android:gravity="left"
            android:paddingLeft="10dip"
            android:paddingTop="5dip"
            android:paddingRight="10dip"
            android:paddingBottom="5dip"
            android:text="标清"
            android:textColor="#35c326"
            android:textSize="14dip" 
            android:visibility="gone"/>

        <View
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/btn_green_shape_selector"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="14dip" />
    </LinearLayout>

</LinearLayout>